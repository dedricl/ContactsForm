@model ContactsForm.Models.ContactModel
    


    <form asp-action="Create" method="post">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3 text-center">Add Contact</h2>
        </div>
        <div class="form-row">
            <div class="col-md-3 offset-md-3 form-group">
                <label>Contact Name: </label>
                <input type="text" class="form-control" required name="firstName" value="" />
            </div>
            <div class="col-md-3 form-group">
                <label>Last Name: </label>
                <input type="text" class="form-control" required name="lastName" value= ""/>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 offset-md-3 form-group">
                <label>Email Address: </label>
                <input type="email" class="form-control" required name="emailAddress" value="" />
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 offset-md-3 form-group">
                <label>Phone Number: </label>
                <input type="tel" class="form-control" required name="phoneNumber" value="" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6 offset-md-3 form-group d-flex justify-content-between">
                <div class="col">
                    <input type="submit" class="btn btn-info" value="Create" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-danger">Back</a>
                </div>
            </div>
        </div>

       


    </form>

