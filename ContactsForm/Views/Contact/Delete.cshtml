@model ContactsForm.Models.ContactModel



<form asp-action="DeletePost" method="post">
   <input asp-for="ContactId" hidden/>
    <div class="form-group row">
        <h2 class="text-black-50 pl-3 text-center">Delete Contact</h2>
    </div>
    <div class="form-row">
        <div class="col-md-3 offset-md-3 form-group">
            <label>Contact Name: </label>
            <input type="text" class="form-control" required name="firstName" disabled value="@Model.FirstName" />
        </div>
        <div class="col-md-3 form-group">
            <label>Last Name: </label>
            <input type="text" class="form-control" required name="lastName" disabled value="@Model.LastName" />
            
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-6 offset-md-3 form-group">
            <label>Email Address: </label>
            <input type="email" class="form-control" required name="emailAddress" disabled value="@Model.EmailAddress" />
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-6 offset-md-3 form-group">
            <label>Phone Number: </label>
            <input type="tel" class="form-control" required name="phoneNumber" disabled value="@Model.PhoneNumber" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6 offset-md-3 form-group d-flex justify-content-between">
            <div class="col">
                <input type="submit"  class="btn btn-danger" value="Delete" />
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </div>
    </div>




</form>


